<div class='container'>
  <h1>Products</h1>
  {{#each products}}
  {{#if this.isActive}}
  <div class="product-card">
    <img src="{{this.thumbnail}}" alt="Product photo not found" class="product-image">
    <div class="product-info">
      <h2 class="product-title" data-product-title="{{this.title}}">
        {{this.title}}
      </h2>
      <p class="product-description">
        <strong>Description:</strong>
        {{this.description}}
      </p>
      <p class="product-price">
        <strong>Price: $</strong>{{this.price}}
      </p>
      <p class="product-stock">
        <strong>Stock:</strong>
        {{this.stock}}
      </p>
      <p class="product-category">
        <strong>Category:</strong>
        {{this.category}}
      </p>
    </div>
    <div class="product-actions">
      <button class="add-to-cart-btn" data-product-id="{{this._id}}" data-product-owner="{{this.owner}}">
        Add to cart
      </button>
      <button class="see-product-btn">
        <a href="/api/products/{{this._id}}" style="color: inherit; text-decoration: none;">
          See this product
        </a>
      </button>
      <button class="delete-product-btn" data-product-id="{{this._id}}" data-product-owner="{{this.owner}}">
        Delete product
      </button>
    </div>
  </div>
  {{/if}}
  {{/each}}

  <input type="hidden" id="cartId" value="{{user.cartId._id}}">
  <input type="hidden" id="email" value="{{user.email}}">
  <input type="hidden" id="userRole" value="{{user.role}}">

  {{#if hasPrevPage}}
  <button class="pagination"><a href='/api/products?pageQuery={{prevPage}}'
      style='color: inherit; text-decoration: none;'>Previous</a></button>
  {{/if}}
  <strong>{{page}}</strong>
  {{#if hasNextPage}}
  <button class="pagination"><a href='/api/products?pageQuery={{nextPage}}'
      style='color: inherit; text-decoration: none;'>Next</a></button>
  {{/if}}
  <button class="pagination"><a href='/api/products?sort=asc' style='color: inherit; text-decoration: none;'>Price
      asc</a></button>
  <button class="pagination"><a href='/api/products?sort=desc' style='color: inherit; text-decoration: none;'>Price
      desc</a></button>
  <button class="pagination"><a href='/api/products' style='color: inherit; text-decoration: none;'>Normal</a></button>

  <script src='/js/products.js'></script>
  <link rel="stylesheet" href="/css/products.css">

</div>