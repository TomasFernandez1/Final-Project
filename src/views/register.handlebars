<div class="wrapper">
  <h2>Registration</h2>
  <form id="formRegister" class="formRegister">
    <div class="input-box">
      <input type="text" name="first_name" placeholder="Javier" required />
    </div>

    <div class="input-box">
      <input type="text" name="last_name" placeholder="Gutierrez" required />
    </div>

    <div class="input-box">
      <input type="email" name="email" placeholder="ecommerce@gmail.com" />
    </div>

    <div class="input-box">
      <input type="password" name="password" placeholder="Password" required />
    </div>

    <div class="input-box">
      <select name="role" id="role" required>
        <option value="USER">USER</option>
        <option value="PREMIUM">PREMIUM</option>
        <option value="ADMIN">ADMIN</option>
      </select>
    </div>

    <div class="input-box button">
      <input type="Submit" value="Register Now" />
    </div>

  </form>
  <script src="/js/register.js"></script>

  <link rel="stylesheet" href="/css/register.css">
</div>